//- index.jade
extends ./../layout.jade


block page-title
	title Стартовая страница

block sidebar
	-var currentItem = 'index.html';
	include ./../partials/sidebar

block content
	section.part-content
		header
			h1.title-h1 Заголовок стартовой страницы
		article.info-inner
			h3 Ненумерованный список
			+list('list-wrap', 'list-body', 'list-item', 'list-value', 'Тип', 'Специализация', 'Город')
			hr
			h3 Список ссылок
			+menu('menu-list', 'menu-item', 'menu-link', "Первое", "Второе", "Третье", "Четвертое")
			hr
			h3 Cписок секций
			+section('section-wrap', 'section-item', 'section-info', 'section-title', 
			'Первая секция','Вторая','Секция номер 3')